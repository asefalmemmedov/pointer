@model Pointer.Models.AdminSetting

@{
    ViewBag.Title = "ChangeAvatar";
}

<h2>ChangeAvatar</h2>

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    @if (ViewBag.UploadError != null)
    {
        <div class="alert alert-danger">
            <p>@ViewBag.UploadError</p>
        </div>
    }

    <div class="form-group">
        <label for="image">Image</label>
        <input type="file" id="image" class="form-control" name="image" />
    </div>

    <label>Current image:</label>
    <img src="~/Areas/Admin/Public/images/Admin/@ViewBag.Image" class="img-thumbnail " style="width: 100px;" />

    <br />
    <input type="submit" value="Update Avatar" class="btn btn-outline-success mt-5" />
</form>

