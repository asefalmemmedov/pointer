@model Pointer.Models.Headers
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="post"action="/Admin/Header/Edit" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextAreaFor(m => m.Title, new { @class = "form-control", id = "title" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Image)
        <input type="file" name="file" value="@Model.Image" />
        @Html.ValidationMessageFor(m => m.Image)
    </div>

    <div class="form-group">
        <label>Current Image:</label>
        <img src="~/Public/img/@Model.Image " style="height:100px; object-fit:contain;" />
    </div>

    <input type="submit" class="btn btn-outline-success" value="Update" />
    <a href="/Admin/Header/Index" class="btn btn-outline-primary">Back To List</a>



</form>

@section scripts{

    <script src="https://cdn.ckeditor.com/ckeditor5/12.1.0/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#title'))
            .catch(error => {
                console.error(error);
            });
    </script>
}