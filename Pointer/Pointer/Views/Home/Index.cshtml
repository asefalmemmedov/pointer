                {
                    <div class="col-md-6 col-lg-3 mb-4">
                        <div class="team">
                            <div>
                                <ul class="social">

                                    <li><a href="@(item.Facebook)"><i class="fab fa-facebook-f"></i></a></li>
                                    <li><a href="@(item.Twitter)"><i class="fab fa-twitter"></i></a></li>
