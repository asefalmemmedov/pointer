    <!-- ------------------------------------------------------About Section Start ---------------------------------------------------->



    <section id="about">
        <div class="site-section cta-big-image">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12 d-sm-flex">
                        <img src="~/Public/img/@Model.About.Image" alt="Image" class="img-fluid">
                        <div class="container">
                            <div class="row">
                                <div class="img-box col-sm-12 display-lg-block display-sm-none">
