<body data-spy="scroll">



    <div class=" pppp site-blocks-cover overlay" style="background-image: url(/Public/img/@Model.Header.Image);" id="home">
        <div class="container">
            <div class="row align-items-center justify-content-center">


                <div class="col-md-6 mt-lg-5 text-center">
                    <h1>@Html.Raw(Model.Header.Title)</h1>
                    <p class="mb-5" style="color:white;">@Model.Header.Description</p>
                    <div>
                        <a href="#" class="btn btn-danger mr-2 mb-2" style="color:white;">Get Started</a>
