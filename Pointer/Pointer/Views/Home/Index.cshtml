    <!--=========================================================== Services Section Start=================================================== -->

    <section id="services" style=" background-color: rgb(222, 225, 230);">
        <div class="container mt-5 pt-5">
            <h1 class="text-center mb-5 pb-5 pt-5" style="color: #e81050;">Our Services</h1>
            <div class="row ml-3">
                @for (int i = 0; i < Model.Services.Take(3).Count(); i++)
