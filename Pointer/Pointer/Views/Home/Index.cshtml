                {
                    <div class="col-md-4">
                        <h1>@(Model.Services.ElementAt(i).Title)</h1>
                        <p>
                            @(Model.Services.ElementAt(i).Content)
                        </p>
                    </div>
                }
            </div>
        </div>
    </section>
