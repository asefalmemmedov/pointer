                                    <h2>@Model.About.Title</h2>
                                    <div class="container ">
                                        <p>
                                            @Model.About.Content
                                        </p>
                                    </div>
                                    <button href="#" class="btn btn-outline-dark">Read More</button>
                                </div>
                            </div>
                        </div>


                    </div>

                </div>


            </div>
        </div>
    </section>
    <!-- ---------------------------------------------------------------About Section End ===================================================-->
    <!------------------------------------------------------------------Team Section start--------------------------------------------------------- -->
    <section class="site-section border-bottom" id="team">
